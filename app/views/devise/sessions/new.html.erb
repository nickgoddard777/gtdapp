
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset>
    <dl>
      <dt><%= f.label :email %></dt>
      <dd><%= f.email_field :email, :class => "large" %></dd>
      <dt><%= f.label :password %></dt>
      <dd><%= f.password_field :password, :class => "large" %></dd>
      <% if devise_mapping.rememberable? -%>
        <dt class="checkbox"><%= f.label :remember_me %></dt>
        <dd><%= f.check_box :remember_me %></dd>
      <% end -%>
    </dl>
  </fieldset>
  <%= f.submit "Sign in", :class=>"right" %>
<% end %>

<%= render :partial => "devise/shared/links" %>
